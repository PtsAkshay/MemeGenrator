<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.main.view.ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/croppedImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:riv_corner_radius="16dp"
        android:layout_margin="20dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/resultSaveImg"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Image"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/roboto_medium"
        app:backgroundTint="#4CAF50"
        app:icon="@drawable/saved_image_icon"
        app:iconTint="#fff"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        android:layout_margin="20dp"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/croppedImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resultShareImg"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/roboto_medium"
        app:backgroundTint="#3F51B5"
        app:icon="@drawable/share_svgrepo_com"
        app:iconSize="24dp"
        app:iconTint="#fff"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        android:layout_margin="20dp"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/resultSaveImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>