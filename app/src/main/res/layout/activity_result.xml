<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.main.view.ResultActivity">




    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/croppedImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/meme6"
        app:riv_corner_radius="16dp"
        android:layout_margin="20dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/cropSavImgBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Image"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/roboto_medium"
        app:backgroundTint="#4CAF50"
        app:icon="@drawable/saved_image_icon"
        app:iconTint="#fff"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        android:layout_margin="20dp"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/croppedImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cropSavAndShareImg"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/roboto_medium"
        app:backgroundTint="#3F51B5"
        app:icon="@drawable/share_svgrepo_com"
        app:iconSize="24dp"
        app:iconTint="#fff"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        android:layout_margin="20dp"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/cropSavImgBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cropSavAndUploadBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/roboto_medium"
        app:backgroundTint="#FF9800"
        app:icon="@drawable/save_and_upload_img"
        app:iconTint="#fff"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        android:layout_margin="20dp"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/cropSavAndShareImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/rbv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:alpha="0.5"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ProgressBar
        android:id="@+id/rsltPB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>